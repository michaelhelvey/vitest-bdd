{
  "name": "@michaelhelvey/vitest-bdd",
  "version": "2.0.4",
  "author": {
    "email": "michael.helvey1@gmail.com",
    "name": "Michael Helvey",
    "url": "https://github.com/michaelhelvey"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelhelvey/vitest-bdd"
  },
  "dependencies": {
    "magic-string": "0.30.21",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@eslint/compat": "2.0.2",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@trivago/prettier-plugin-sort-imports": "6.0.2",
    "@types/node": "25.2.1",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "9.39.1",
    "happy-dom": "20.5.0",
    "jiti": "2.6.1",
    "lefthook": "2.1.0",
    "prettier": "3.8.1",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tsdown": "0.20.3",
    "typescript-eslint": "8.54.0",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "vite": ">=5",
    "vitest": ">3"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/plugin.d.mts",
        "default": "./dist/plugin.mjs"
      }
    },
    "./runtime": {
      "import": {
        "types": "./dist/runtime.d.mts",
        "default": "./dist/runtime.mjs"
      }
    },
    "./ts-plugin": "./dist/ts-plugin.cjs",
    "./globals": {
      "types": "./src/globals.d.ts"
    },
    "./package.json": "./package.json"
  },
  "description": "A BDD (Behavior-Driven Development) testing helper for Vitest that provides a structured given/when/it pattern with isolated world state for each test.",
  "engines": {
    "node": ">=24"
  },
  "files": [
    "dist",
    "ts-plugin",
    "src/globals.d.ts",
    "README.md",
    "package.json"
  ],
  "license": "MIT",
  "prettier": {
    "proseWrap": "always",
    "singleQuote": false,
    "semi": true,
    "trailingComma": "all",
    "useTabs": false,
    "printWidth": 100,
    "tabWidth": 2,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^node:.*$",
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true
  },
  "scripts": {
    "prepare": "lefthook install",
    "prepublish": "bun run validate",
    "test": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "attw": "attw --pack . --exclude-entrypoints ./ts-plugin --ignore-rules no-resolution cjs-resolves-to-esm",
    "validate": "bun run build && bun run test --run && bun run lint && bun run typecheck && bun run attw",
    "build": "tsc -b && tsdown && bun link"
  },
  "sideEffects": false,
  "type": "module"
}
